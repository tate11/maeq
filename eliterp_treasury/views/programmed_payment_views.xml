<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--AcciÃ³n-->
    <record id="eliterp_action_programmed_payment" model="ir.actions.act_window">
        <field name="name">Pagos programados</field>
        <field name="res_model">eliterp.programmed.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="eliterp_view_form_programmed_payment_wizard" model="ir.ui.view">
        <field name="name">elitum_view_form_programmed_payment_wizard</field>
        <field name="model">eliterp.programmed.payment</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <h1>
                        <field name="invoice_id"
                               options='{"no_open": True, "no_create": True}'/>
                    </h1>
                </div>
                <group col="4">
                    <field name="amount_reference" invisible="1"/>
                    <field name="residual" invisible="1"/>
                    <field name="date"/>
                    <field name="payment_type"
                           widget="radio"
                           options="{'horizontal': true}"/>
                    <field name="amount"/>
                    <field name="way_to_pay"/>
                    <field name="bank_id"
                           options="{'no_open': True, 'no_create': True}"
                           attrs="{'invisible':[('way_to_pay','!=','check')], 'required':[('way_to_pay','=','check')]}"/>
                </group>
                <footer>
                    <button special="save" class="oe_highlight" string="Confirmar"/>
                    <button string="Descartar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="eliterp_view_form_programmed_payment" model="ir.ui.view">
        <field name="name">eliterp_view_form_programmed_payment</field>
        <field name="model">eliterp.programmed.payment</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" duplicate="false">
                <sheet>
                    <group col="4">
                        <field name="amount_reference" invisible="1"/>
                        <field name="invoice_id"/>
                        <field name="date"/>
                        <field name="payment_type"/>
                        <field name="amount"/>
                        <field name="way_to_pay"/>
                        <field name="bank_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="eliterp_view_tree_programmed_payment" model="ir.ui.view">
        <field name="name">eliterp_view_tree_programmed_payment</field>
        <field name="model">eliterp.programmed.payment</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" decoration-info="state=='draft'"
                  decoration-success="state == 'paid'"
                  default_order='date asc'>
                <field name="date"/>
                <field name="payment_type"/>
                <field name="way_to_pay"/>
                <field name="bank_id"/>
                <field name="amount" sum="Total"/>
                <field name="amount_reference" sum="Total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
</odoo>
