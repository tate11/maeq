<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Ventana emergente Reporte de cuenta por cobrar-->
        <record id="eliterp_view_form_accounts_receivable_report_wizard" model="ir.ui.view">
            <field name="name">eliterp_view_form_accounts_receivable_report_wizard</field>
            <field name="model">eliterp.accounts.receivable.report</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <field name="customer_type" widget="radio" options="{'horizontal': true}"/>
                        <field name="partner" domain="[('customer','=',True)]"
                               attrs="{'invisible':[('customer_type','!=','partner')]}" options="{'no_create':True}"/>

                        <!--
                            <field name="tipo_reporte" string="Tipo de Reporte" options="{'horizontal': true}" widget="radio"/>
                        -->
                        <field name="estado" string="Estado" options="{'horizontal': true}" widget="radio"/>
                        <field name="delinquency"/>

                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                    <footer>
                        <!--TODO
                        <button name="print_report_xlsx"
                                type="object"
                                class="oe_highlight"
                                string="XLSX"/>
                        -->
                        <button name="print_report_pdf"
                                type="object"
                                class="oe_highlight"
                                string="PDF"/>
                        <button string="Descartar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Ventana emergente Reporte de cuenta por pagar-->
        <record id="eliterp_view_form_accounts_to_pay_report_wizard" model="ir.ui.view">
            <field name="name">eliterp_view_form_accounts_to_pay_report_wizard</field>
            <field name="model">eliterp.accounts.to.pay.report</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <!--
                            <field name="tipo_reporte" string="Tipo" widget="radio"/>
                           -->
                        <field name="provider_type" widget="radio" options="{'horizontal': true}"/>
                        <field name="provider" domain="[('supplier','=',True)]"
                               attrs="{'invisible':[('provider_type','!=','provider')]}"
                               options="{'no_create':True}"/>
                        <field name="estado" string="Estado" options="{'horizontal': true}" widget="radio"/>
                        <field name="delinquency" placeholder="...."/>
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                    <footer>
                        <!--TODO
                        <button name="print_report_xlsx"
                                type="object"
                                class="oe_highlight"
                                string="XLSX"/>
                        -->
                        <button name="print_report_pdf"
                                type="object"
                                class="oe_highlight"
                                string="PDF"/>
                        <button string="Descartar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Ventana emergente Reporte de cheque recibido-->
        <record id="eliterp_view_form_checks_received_report_wizard" model="ir.ui.view">
            <field name="name">eliterp_view_form_checks_received_report_wizard</field>
            <field name="model">eliterp.checks.received.report</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <field name="customer_type" widget="radio" options="{'horizontal': true}"/>
                        <field name="partner" domain="[('customer','=',True)]"
                               attrs="{'invisible':[('customer_type','!=','partner')]}" options="{'no_create':True}"/>
                        <!--
                            <field name="bank_type"
                               widget="radio"
                               options="{'horizontal': true}"/>
                            <field name="bank"
                               options="{'no_create':True}"
                               domain="[('type_action','=','payments')]"
                               attrs="{'invisible':[('bank_type','!=','bank')]}"/>
                        -->
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                    <footer>
                        <!--TODO
                        <button name="print_report_xlsx"
                                type="object"
                                class="oe_highlight"
                                string="XLSX"/>
                        -->
                        <button name="print_report_pdf"
                                type="object"
                                class="oe_highlight"
                                string="PDF"/>
                        <button string="Descartar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Ventana emergente Reporte de cheque emetido-->
        <record id="eliterp_view_form_checks_issued_report_wizard" model="ir.ui.view">
            <field name="name">eliterp_view_form_checks_issued_report_wizard</field>
            <field name="model">eliterp.checks.issued.report</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <field name="type_check" string="Tipo de Cheque"/>
                        <!--
                            <field name="bank_type"
                               widget="radio"
                               options="{'horizontal': true}"
                               string="Banco"/>
                            <field name="bank"
                               options="{'no_create':True}"
                               domain="[('type_action','=','charges')]"
                               attrs="{'invisible':[('bank_type','!=','bank')]}"/>
                        -->
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                    <footer>
                        <!--TODO
                        <button name="print_report_xlsx"
                                type="object"
                                class="oe_highlight"
                                string="XLSX"/>
                        -->
                        <button name="print_report_pdf"
                                type="object"
                                class="oe_highlight"
                                string="PDF"/>
                        <button string="Descartar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Ventana emergente Reporte de pagos programados-->
        <record id="eliterp_view_form_scheduled_payments_report_wizard" model="ir.ui.view">
            <field name="name">eliterp_view_form_scheduled_payments_report_wizard</field>
            <field name="model">eliterp.scheduled.payments.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="form_pay"/>
                        </group>
                        <group>
                            <field name="end_date" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <!--TODO
                        <button name="print_report_xlsx"
                                type="object"
                                class="oe_highlight"
                                string="XLSX"/>
                        -->
                        <button name="print_report_pdf"
                                type="object"
                                class="oe_highlight"
                                string="PDF"/>
                        <button string="Descartar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>