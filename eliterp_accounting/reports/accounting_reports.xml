        <!--Reporte de libro mayor-->
        <template id="eliterp_report_general_ledger">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="report_title">LIBRO MAYOR</t>
                    <t t-set="is_report" t-value="True"/>
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-4">
                                    <strong>Empresa:</strong>
                                    <p t-field="user.company_id.name"/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Período:</strong>
                                    <p t-field="doc.start_date" t-options='{"format": "yyyy"}'/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Fecha de Corte:</strong>
                                    <p t-field="doc.end_date"/>
                                </div>
                            </div>
                            <t t-foreach="get_lines(doc)" t-as="account">
                                <caption class="text-center">
                                    Cuenta:&amp;nbsp;
                                    <strong>
                                        <span t-esc="account['code']"/>[<span t-esc="account['account']"/>]
                                    </strong>
                                </caption>
                                <table class="table_general_ledger table table-condensed">
                                    <thead>
                                        <tr>
                                            <th class="text-center">No. Compensación</th>
                                            <th class="text-center">Fecha</th>
                                            <th class="text-right">Debe</th>
                                            <th class="text-right">Haber</th>
                                            <th class="text-right">Saldo</th>
                                        </tr>
                                        <tr style="border-bottom: 1px solid gray;">
                                            <td colspan="4" class="text-right">
                                                <span>SALDO INICIAL</span>
                                            </td>
                                            <td class="text-right">
                                                <b>
                                                    <span t-esc="'%.2f' % account['beginning_balance']"/>
                                                </b>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="account['moves']" t-as="line">
                                            <td>
                                                <span t-esc="line['name']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['date']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'%.2f' % line['debit']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'%.2f' % line['credit']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'%.2f' % line['balance']"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr style="border-top: 3px solid black; font-size:15px;">
                                            <td colspan="3" class="text-right">
                                                <span t-esc="'%.2f' % account['total_debit']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'%.2f' % account['total_credit']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'%.2f' % account['total_balance']"/>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <report
                id="eliterp_action_report_general_ledger"
                model="eliterp.general.ledger.report"
                string="Libro mayor"
                report_type="qweb-pdf"
                name="eliterp_accounting.eliterp_report_general_ledger"
                file="eliterp_accounting.eliterp_report_general_ledger"
                print_report_name="'Libro mayor - %s' % (object.account_id.name or 'Todos')"
                paperformat="eliterp_management.eliterp_paperformat_a4_landscape"
        />
    </data>
