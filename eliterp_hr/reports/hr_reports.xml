<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Reporte de empleados-->
        <template id="eliterp_report_employee_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="report_code">REPO-RRHH-001-V1</t>
                    <t t-set="report_title">REPORTE DE EMPLEADOS</t>
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row mt32 mb32">
                                <div class="col-xs-4">
                                    <strong>Fecha inicio:</strong>
                                    <p t-field="doc.start_date"/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Fecha fin:</strong>
                                    <p t-field="doc.end_date"/>
                                </div>
                                <div class="col-xs-4">
                                    <strong>Activos?:</strong>
                                    <p t-if="doc.active">Si</p>
                                    <p t-if="not doc.active">Todos</p>
                                </div>
                            </div>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th class="text-center">No.</th>
                                        <th class="text-center">Cédula</th>
                                        <th class="text-center">Nombres</th>
                                        <th class="text-center">Nacimiento</th>
                                        <th class="text-center">Edad</th>
                                        <th class="text-center">Estado civil</th>
                                        <th class="text-center">Fecha de ingreso</th>
                                        <th class="text-center">Departamento</th>
                                        <th class="text-center">Cargo</th>
                                        <th class="text-center">Sueldo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="get_lines(doc)" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-esc="line['number']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['identification_id']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['name']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['birthday']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['age']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['civil_status']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['admission_date']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['department_id']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['job_id']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['wage']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <report
                id="eliterp_action_report_employee_report"
                model="eliterp.employee.report"
                string="Reporte de empleados"
                report_type="qweb-pdf"
                name="eliterp_hr.eliterp_report_employee_report"
                file="eliterp_hr.eliterp_report_employee_report"
                paperformat="eliterp_management.eliterp_paperformat_a4_landscape"
        />
