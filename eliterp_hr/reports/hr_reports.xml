            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="report_code">REPO-RRHH-001-V1</t>
                    <t t-set="report_title">REPORTE DE EMPLEADOS</t>
                    <t t-call="web.external_layout">
                        <div class="page">
